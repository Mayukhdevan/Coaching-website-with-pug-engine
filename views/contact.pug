extends base.pug

block scripts
	script(src='/static/index.js')

block style
	style 
		include ../static/style.css 
		include ../static/styleContact.css
block content
	#content
		nav#navbar
			ul
				li #[a(href="/") Home]
				li #[a(href="/") About]
				li #[a(href="/") Services]
				li #[a(href="/") Admission]
				li #[a(href="/contact") Contact Us]
		h2 Contact Us 
		form(action="/contact", method="post", 	class="myForm")

			label(for="name") Name:
			input(type="text", class="myInput", name="name", placeholder="Enter your name")

			label(for="email") E-mail:
			input(type="email", class="myInput", name="email", placeholder="Enter your email address")

			label(for="phone") Phone:
			input(type="phone", class="myInput", name="phone", placeholder="Enter your phone number")

			label(for="address") Address:
			input(type="address", class="myInput", name="address", placeholder="Enter your address")

			label(for="desk") Desk:
			input(type="text", class="myInput", name="desk", placeholder="Enter your concern")

			button.btn(type="submit", form="myForm", value="submit") Submit
